<%- include('../partials/header') %>

    <div class="max-w-7xl mx-auto py-8 sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">
            <!-- Welcome Section -->
            <div class="mb-10 text-center sm:text-left">
                <h1
                    class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-pink-600 mb-2">
                    Level Up Your English!
                </h1>
                <p class="text-lg text-slate-600 dark:text-slate-400">Track your progress and master new words every
                    day.</p>
            </div>

            <!-- Stats Grid (Gamified) -->
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-10">
                <!-- Total XP / Vocab -->
                <div
                    class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm overflow-hidden shadow-lg rounded-2xl border border-white/50 dark:border-slate-700 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
                    <div class="px-6 py-6 ring-1 ring-black/5 dark:ring-white/5">
                        <div class="flex items-center">
                            <div
                                class="bg-indigo-100 dark:bg-indigo-900/50 rounded-xl p-3 text-2xl group-hover:scale-110 transition-transform">
                                üìö</div>
                            <div class="ml-4">
                                <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">Total Words
                                </dt>
                                <dd class="mt-1 text-3xl font-bold text-slate-800 dark:text-white">
                                    <%= stats.totalVocab %>
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Studied (XP Gained) -->
                <div
                    class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm overflow-hidden shadow-lg rounded-2xl border border-white/50 dark:border-slate-700 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
                    <div class="px-6 py-6 ring-1 ring-black/5 dark:ring-white/5">
                        <div class="flex items-center">
                            <div
                                class="bg-blue-100 dark:bg-blue-900/50 rounded-xl p-3 text-2xl group-hover:scale-110 transition-transform">
                                üéì</div>
                            <div class="ml-4">
                                <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">Words
                                    Studied</dt>
                                <dd class="mt-1 text-3xl font-bold text-indigo-600 dark:text-indigo-400">
                                    <%= stats.studied %>
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mastered (High Score) -->
                <div
                    class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm overflow-hidden shadow-lg rounded-2xl border border-white/50 dark:border-slate-700 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
                    <div class="px-6 py-6 ring-1 ring-black/5 dark:ring-white/5">
                        <div class="flex items-center">
                            <div
                                class="bg-green-100 dark:bg-green-900/50 rounded-xl p-3 text-2xl group-hover:scale-110 transition-transform">
                                üèÜ</div>
                            <div class="ml-4">
                                <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">Mastered
                                </dt>
                                <dd class="mt-1 text-3xl font-bold text-green-600 dark:text-green-400">
                                    <%= stats.memorized %>
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Learning (Current Quest) -->
                <div
                    class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm overflow-hidden shadow-lg rounded-2xl border border-white/50 dark:border-slate-700 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
                    <div class="px-6 py-6 ring-1 ring-black/5 dark:ring-white/5">
                        <div class="flex items-center">
                            <div
                                class="bg-amber-100 dark:bg-amber-900/50 rounded-xl p-3 text-2xl group-hover:scale-110 transition-transform">
                                üî•</div>
                            <div class="ml-4">
                                <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">In Progress
                                </dt>
                                <dd class="mt-1 text-3xl font-bold text-amber-600 dark:text-amber-400">
                                    <%= stats.stillLearning %>
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mastery Progress Bar (XP Bar) -->
            <div
                class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm shadow-xl rounded-2xl px-6 py-6 mb-10 border border-white/50 dark:border-slate-700 relative overflow-hidden">
                <div
                    class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 opacity-20">
                </div>
                <div class="flex items-center justify-between mb-4">
                    <span class="text-lg font-bold text-slate-800 dark:text-white">Mastery Level</span>
                    <span class="text-lg font-bold text-indigo-600 dark:text-indigo-400">
                        <%= stats.progressPercentage %>%
                    </span>
                </div>
                <div
                    class="w-full bg-slate-100 dark:bg-slate-700 rounded-full h-6 shadow-inner relative overflow-hidden">
                    <div class="bg-gradient-to-r from-indigo-500 to-purple-600 h-6 rounded-full transition-all duration-1000 ease-out flex items-center justify-end px-2"
                        style="width: <%= stats.progressPercentage %>%">
                        <% if (stats.progressPercentage> 5) { %>
                            <div class="w-2 h-2 bg-white/50 rounded-full animate-pulse"></div>
                            <% } %>
                    </div>
                </div>
                <p class="mt-4 text-sm text-slate-500 dark:text-slate-400 text-center italic">Keep studying to increase
                    your mastery!</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Quick Actions -->
                <div
                    class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm shadow-lg rounded-2xl p-8 border border-white/50 dark:border-slate-700 flex flex-col justify-center items-center">
                    <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-6">Ready for a Challenge?</h2>
                    <div class="flex flex-col gap-4 w-full max-w-sm">
                        <a href="/study"
                            class="w-full flex items-center justify-center gap-3 px-6 py-4 border border-transparent rounded-xl shadow-lg shadow-indigo-500/30 text-lg font-bold text-white bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 transform hover:scale-105 transition-all">
                            <span>üöÄ</span> Start Study Session
                        </a>
                        <a href="/vocab"
                            class="w-full flex items-center justify-center gap-3 px-6 py-4 border-2 border-slate-200 dark:border-slate-600 rounded-xl shadow-sm text-lg font-bold text-slate-600 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-slate-50 dark:hover:bg-slate-600 hover:border-slate-300 dark:hover:border-slate-500 transform hover:scale-105 transition-all">
                            <span>üìñ</span> Browse Vocabulary
                        </a>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div
                    class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm shadow-lg rounded-2xl overflow-hidden border border-white/50 dark:border-slate-700">
                    <div
                        class="px-6 py-5 border-b border-slate-100 dark:border-slate-700 bg-slate-50/50 dark:bg-slate-800/50">
                        <h2 class="text-lg font-bold text-slate-800 dark:text-white">Recent Quests</h2>
                    </div>
                    <ul role="list" class="divide-y divide-slate-100 dark:divide-slate-700">
                        <% if (history.length===0) { %>
                            <li class="px-6 py-8 text-slate-500 dark:text-slate-400 text-center">
                                <div class="text-4xl mb-2">üò¥</div>
                                No activity yet. Start your first quest!
                            </li>
                            <% } else { %>
                                <% history.forEach(item=> { %>
                                    <li
                                        class="px-6 py-4 hover:bg-indigo-50/30 dark:hover:bg-indigo-900/30 transition-colors">
                                        <div class="flex items-center justify-between">
                                            <div class="text-base font-bold text-slate-800 dark:text-white truncate">
                                                <%= item.word %>
                                            </div>
                                            <div class="ml-2 flex-shrink-0 flex">
                                                <% if (item.status==='reviewing' || item.status==='known' ) { %>
                                                    <span
                                                        class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-bold rounded-full bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 border border-green-200 dark:border-green-800">
                                                        Memorized
                                                    </span>
                                                    <% } else { %>
                                                        <span
                                                            class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-bold rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-300 border border-amber-200 dark:border-amber-800">
                                                            Learning
                                                        </span>
                                                        <% } %>
                                            </div>
                                        </div>
                                        <div class="mt-1 sm:flex sm:justify-between">
                                            <div class="sm:flex">
                                                <p class="flex items-center text-sm text-slate-500 dark:text-slate-400">
                                                    <%= item.meaning %>
                                                </p>
                                            </div>
                                            <div
                                                class="mt-2 flex items-center text-xs text-slate-400 dark:text-slate-500 sm:mt-0 font-mono">
                                                <%= new Date(item.last_review).toLocaleDateString() %>
                                            </div>
                                        </div>
                                    </li>
                                    <% }) %>
                                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>