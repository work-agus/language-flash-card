<% const navItems=[ { name: 'Dashboard' , path: '/dashboard' ,
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />'
    }, { name: 'Study' , path: '/study' ,
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />'
    }, { name: 'Vocab' , path: '/vocab' ,
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />'
    } ]; %>

    <div
        class="fixed bottom-0 left-0 z-50 w-full h-16 bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800 sm:hidden">
        <div class="grid h-full max-w-lg grid-cols-3 mx-auto font-medium">
            <% navItems.forEach(item=> {
                const isActive = (typeof path !== 'undefined' && path === item.path) || (item.path === '/vocab' &&
                typeof path !== 'undefined' && path.startsWith('/vocab'));
                %>
                <a href="<%= item.path %>"
                    class="inline-flex flex-col items-center justify-center px-5 hover:bg-slate-50 dark:hover:bg-slate-800 group transition-colors duration-200 <%= isActive ? 'text-indigo-600 dark:text-indigo-400' : 'text-slate-500 dark:text-slate-400' %>">
                    <svg class="w-6 h-6 mb-1 <%= isActive ? 'text-indigo-600 dark:text-indigo-400' : 'text-slate-500 dark:text-slate-400 group-hover:text-indigo-600 dark:group-hover:text-indigo-400' %> transition-colors duration-200"
                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <%- item.icon %>
                    </svg>
                    <span
                        class="text-xs <%= isActive ? 'text-indigo-600 dark:text-indigo-400' : 'text-slate-500 dark:text-slate-400 group-hover:text-indigo-600 dark:group-hover:text-indigo-400' %> transition-colors duration-200">
                        <%= item.name %>
                    </span>
                </a>
                <% }) %>
        </div>
    </div>