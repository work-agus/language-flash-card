<%- include('../partials/header') %>

    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-slate-900">Vocabulary Details</h3>
                    <p class="mt-1 max-w-2xl text-sm text-slate-500">Comprehensive view of the word.</p>
                </div>
                <a href="/vocab" class="text-indigo-600 hover:text-indigo-900 font-medium">Back to List</a>
            </div>
            <div class="border-t border-slate-200">
                <dl>
                    <div class="bg-slate-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-slate-500">Word</dt>
                        <dd class="mt-1 text-sm text-slate-900 sm:mt-0 sm:col-span-2 font-bold text-xl">
                            <%= vocab.word %>
                        </dd>
                    </div>
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-slate-500">Meaning (Indonesian)</dt>
                        <dd class="mt-1 text-sm text-slate-900 sm:mt-0 sm:col-span-2">
                            <%= vocab.meaning %>
                        </dd>
                    </div>
                    <div class="bg-slate-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-slate-500">Category</dt>
                        <dd class="mt-1 text-sm text-slate-900 sm:mt-0 sm:col-span-2">
                            <%= vocab.category %>
                        </dd>
                    </div>
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-slate-500">Level</dt>
                        <dd class="mt-1 text-sm text-slate-900 sm:mt-0 sm:col-span-2 capitalize">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                            <%= vocab.level === 'easy' ? 'bg-green-100 text-green-800' : 
                                vocab.level === 'medium' ? 'bg-yellow-100 text-yellow-800' : 
                                'bg-red-100 text-red-800' %>">
                                <%= vocab.level %>
                            </span>
                        </dd>
                    </div>
                    <div class="bg-slate-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-slate-500">Example Sentence</dt>
                        <dd class="mt-1 text-sm text-slate-900 sm:mt-0 sm:col-span-2 italic">"<%= vocab.example %>"</dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>